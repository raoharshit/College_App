<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.collegeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/dcrust_icon"
        android:label="DCRUST"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeApp"
        tools:replace="android:label"
        tools:targetApi="31">
        <activity
            android:name=".ClubActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Authentication.ForgetPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.LoginActivity" />
        <activity
            android:name=".Authentication.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.LoginActivity"></activity>
        <activity
            android:name=".Authentication.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.LoginActivity" />
        <activity
            android:name=".FullImageView"
            android:exported="false" />
        <activity
            android:name=".ebook.PdfViewerActivity"
            android:exported="false"
            android:parentActivityName=".ebook.EbookActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".ebook.EbookActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>